{
  "name": "sworld-backend",
  "private": true,
  "version": "0.0.1",
  "description": "sworld backend",
  "license": "MPL-2.0",
  "main": "index.ts",
  "type": "module",
  "engines": {
    "node": "^22.14.0"
  },
  "scripts": {
    "build": "tsc",
    "start-gateway": "tsx src/gateway.ts",
    "dev-gateway": "tsx watch --clear-screen=false src/gateway.ts | pino-pretty",
    "start-compute": "tsx src/compute.ts",
    "dev-compute": "tsx watch --clear-screen=false src/compute.ts | pino-pretty",
    "start-io": "tsx src/io.ts",
    "dev-io": "tsx watch --clear-screen=false src/io.ts | pino-pretty",
    "codegen": "dotenvx run -- graphql-codegen --config src/services/hasura/codegen.ts",
    "watch-codegen-hasura": "dotenvx run -- graphql-codegen --config src/services/hasura/codegen.ts --watch",
    "watch-codegen-hashnode": "dotenvx run -- graphql-codegen --config src/services/hashnode/codegen.ts --watch",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org sworld-dc --project node-express ./dist && sentry-cli sourcemaps upload --org sworld-dc --project node-express ./dist",
    "prepare": "husky install",
    "format": "biome format --write",
    "lint": "biome lint --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@dotenvx/dotenvx": "^1.38.4",
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@graphql-codegen/typed-document-node": "^5.0.12",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@parcel/watcher": "^2.5.1",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/m3u8-parser": "^7.2.0",
    "@types/node": "^20.17.10",
    "@vitest/coverage-v8": "^3.0.5",
    "husky": "^8.0.0",
    "pino-pretty": "^13.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.2.2",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@google-cloud/storage": "^7.15.0",
    "@google-cloud/tasks": "^5.5.2",
    "@hono/node-server": "^1.19.3",
    "@hono/sentry": "^1.2.2",
    "@hono/zod-validator": "^0.7.3",
    "@sentry/cli": "^2.39.1",
    "@sentry/node": "^8.45.0",
    "@sentry/profiling-node": "^8.45.0",
    "@simplewebauthn/server": "^13.0.0",
    "@simplewebauthn/types": "^12.0.0",
    "cloudinary": "^2.5.1",
    "cors": "^2.8.5",
    "crawlee": "^3.13.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.5.0",
    "firebase-admin": "^13.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "graphql-request": "^7.1.2",
    "helmet": "^8.0.0",
    "hono": "^4.9.8",
    "hono-rate-limiter": "^0.4.2",
    "m3u8-parser": "^7.2.0",
    "nanoid": "^5.1.5",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "pino": "^9.6.0",
    "pino-http": "^10.3.0",
    "playwright": "^1.50.1",
    "sequelize": "^6.37.5",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  }
}
